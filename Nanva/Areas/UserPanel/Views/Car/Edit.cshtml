@model Nanva.Function.Car
@{
    var ListPlaqueType = ViewBag.PlaqueType as List<SelectListItem>;
    bool? ResultCrude = ViewData["ResultCrude"] as bool?;
}
<html>
<head>
    <link href="~/Content/DatePicker/css/persianDatepicker-default.css" rel="stylesheet" />
</head>
<body>
    <style>
        .InputCreate {
            display: block;
            width: 100%;
            height: 30px;
            padding: 0.375rem 0.75rem;
            font-size: 10px;
            font-weight: 100;
            line-height: 0.5;
            color: #6e707e;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #d1d3e2;
            border-radius: 0.25rem;
        }

        .Desc {
            font-size: 10px;
            font-weight: 60;
            line-height: 0.5;
            height: 60px;
            color: #6e707e;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #d1d3e2;
            border-radius: 0.25rem;
        }

        .TextLabel {
            font-size: small;
            display: inline;
            margin-right: 15px;
        }

        .infoDiv {
            height: 200px;
            width: 300px;
            -webkit-user-select: none;
            background-color: white;
        }

        option {
            line-height: 0.1;
        }
    </style>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">آنی سرویس </a></li>
                <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
                <li class="breadcrumb-item active" aria-current="page">ثبت ماشین </li>
            </ul>
        </nav>
    </div>
    <main>
        <div class="container">
            <div class="user-account">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        @RenderPage("~/Areas/UserPanel/Views/Shared/_SiteBarRigthUserPanelPartialView.cshtml", false)
                    </div>
                    <div class="col-md-9 col-sm-8 col-xs-12">
                        <section class="user-account-content " style="height:780px;">
                            @if (ResultCrude == true)
                            {
                                <div class="row">
                                    <div class="right container alert-success" style="border-radius:5px;" id="alertdiv">
                                        <div class="col-md-3 alert" role="alert" id="alertText">
                                            عملیات با موفقیت انجام شد.
                                        </div>
                                    </div>
                                </div>
                                <script>
                                    setTimeout(function () { window.location = "/Nanva/UserPanel/Car/Index"; }, 2000);
                                </script>
                            }
                            @using (Html.BeginForm())
                            {
                                @Html.HiddenFor(model => model.Id)
                                <div class="row ">
                                    <div class="col-md-12">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = " InputCreate" } })
                                                @Html.ValidationMessageFor(model => model.Name)
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Color, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = " InputCreate" } })
                                                @Html.ValidationMessageFor(model => model.Color)
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = " InputCreate" } })
                                                @Html.ValidationMessageFor(model => model.Model)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-4 container">
                                            @Html.LabelFor(model => model.CreateYearFa, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.CreateYearFa, new { htmlAttributes = new { @class = " InputCreate", @Id = "persianDatapicker", @style = "left: 625.562px; top: 90px;" } })
                                                @Html.ValidationMessageFor(model => model.CreateYearFa)
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.IranNumber, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.IranNumber, new { htmlAttributes = new { @class = " InputCreate", @maxlength = "2" } })
                                                @Html.ValidationMessageFor(model => model.IranNumber)
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.PlaqeThreeDigit, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.PlaqeThreeDigit, new { htmlAttributes = new { @class = " InputCreate", @maxlength = "3" } })
                                                @Html.ValidationMessageFor(model => model.PlaqeThreeDigit)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.PlaqueTwoDigit, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.PlaqueTwoDigit, new { htmlAttributes = new { @class = " InputCreate", @maxlength = "2" } })
                                                @Html.ValidationMessageFor(model => model.PlaqueTwoDigit)
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(model => model.PlaqueType, htmlAttributes: new { @class = "TextLabel" })
                                            <div class="col-md-12">
                                                @Html.DropDownListFor(model => model.PlaqueType, new SelectList(ListPlaqueType, "Value", "Text"), "انتخاب کنید", new { @class = " InputCreate" })
                                                @Html.ValidationMessageFor(model => model.PlaqueType)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group " style="margin-top:5px;">
                                    <div class="panel">
                                        <input type="submit" value="ثبت" class="btn btn-sm btn-success float-left" />
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
<script src="~/Content/DatePicker/js/persianDatepicker.min.js"></script>
<script>
    $("#persianDatapicker").persianDatepicker();
</script>